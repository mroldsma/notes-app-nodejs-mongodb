<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header mb-3">
        Account Login
      </div>
      <div class="w-100 d-flex align-items-center justify-content-center display-1 text-primary"><i class='bx bx-notepad'></i></div>
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input
              type="email"
              name="email"
              placeholder="E-Mail"
              class="form-control mb-3"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              name="password"
              placeholder="Password"
              class="form-control mb-3"
            />
          </div>
          
          <button class="btn btn-primary w-100">Sign In</button>
        </form>
      </div>
    </div>
  </div>
</div>