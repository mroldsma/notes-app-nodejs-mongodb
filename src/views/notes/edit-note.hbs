<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Note</h3>
    </div>
    <div class="card-body">
      
      <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group mb-3">
          <input type="text" class="form-control" name="title" value="{{note.title}}">
        </div>
        <div class="form-group mb-3">
          <textarea name="description" cols="30" rows="10" class="form-control">{{note.description}}</textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary w-100" type="submit">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>