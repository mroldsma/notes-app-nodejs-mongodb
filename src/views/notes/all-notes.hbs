<div class="row">
  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} <a href="/notes/edit/{{_id}}"><i class='bx bx-edit'></i></a> </h4>
          <p> {{description}} </p>
          
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger w-100 btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>